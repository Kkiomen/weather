{% extends 'base.html.twig' %}

{% block title %}Weather App!{% endblock %}

{% block body %}

<div class="container-lg pt-5">

    <div class="row">
        <div class="col-md-6">
            {% if error is not null %}
            <div class="alert alert-danger mt-3 mb-3">
                {{ error }}
            </div>
            {% endif %}


            <h1>Weather App</h1>
            {{  form_start(form_choose_city) }}
            {{  form(form_choose_city) }}
            {{  form_end(form_choose_city) }}
        </div>
        <div class="col-md-6 text-center">
            <img src="assets/image/earth-globe.png" width="50%"/>
        </div>
    </div>




</div>
{% endblock %}
